<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FlashCardsActivity">

    <!-- Anasayfaya Dön Butonu (Sol Üst) -->
    <Button
        android:id="@+id/btnBackToHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:text="Anasayfa"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:gravity="center"
        android:text="Flashcards Alıştırması"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBackToHome" />

    <!-- Seviye Seçimi İçin Spinner -->
    <Spinner
        android:id="@+id/spinnerLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:entries="@array/levels"
        android:paddingLeft="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <!-- Flashcard Kartı -->
    <androidx.cardview.widget.CardView
        android:id="@+id/flashcard"
        android:layout_width="307dp"
        android:layout_height="197dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title">

        <!-- Kartın İçeriği (Ön/Arka Yüz) -->
        <FrameLayout
            android:id="@+id/flashcard_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/front_side"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="normal"
                android:visibility="visible" />

            <TextView
                android:id="@+id/back_side"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="normal"
                android:visibility="gone" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- Sonraki Kelime Butonu (Alt Sağ) -->

    <Button
        android:id="@+id/btnNext"
        android:layout_width="107dp"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="140dp"
        android:background="@drawable/rounded_button"
        android:text="Sonraki"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/flashcard" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:paddingStart="12dp"
        android:text="Seviye"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBackToHome" />

</androidx.constraintlayout.widget.ConstraintLayout>
